# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# YouTube Live Configuration
# Note: Stream key can also be set via Telegram bot using /setkey command
# The bot command takes precedence over this environment variable
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2/

# Optional: Google Drive API (for Google Drive links)
GOOGLE_DRIVE_CREDENTIALS=path_to_credentials.json

# Stream Settings
VIDEO_BITRATE=2500k
AUDIO_BITRATE=128k
VIDEO_RESOLUTION=1920x1080
FPS=30

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=

# Storage Path
STORAGE_PATH=./storage/
